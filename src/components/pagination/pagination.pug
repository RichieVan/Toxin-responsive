mixin pagination(options)
  include ../like-button/like-button
  -
    if (typeof options === 'undefined') {
      options = {};
    }

    let mods = '';
    if (options?.mods) {
      for (let i = 0; i < options.mods.length; i++) {
        mods = mods + ' pagination_' + options.mods[i].trim();
      }
    }
  nav.pagination
    ul.pagination__list
      li.pagination__item.pagination__item_active
        a.pagination__link(href='#') 1
      li.pagination__item
        a.pagination__link(href='#') 2
      li.pagination__item
        a.pagination__link(href='#') 3
      li.pagination__item
        a.pagination__link(href='#') ...
      li.pagination__item
        a.pagination__link(href='#') 15
      li.pagination__item
        a.pagination__link.pagination__link_with-arrow(href='#') 
          span.material-icons arrow_forward
    .pagination__info 1 – 12 из 100+ вариантов аренды